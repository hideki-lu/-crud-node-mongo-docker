<div>
  <label>Titulo</label>
  <input type="text" name="titulo" value="<%= blog_post.titulo %>">
</div>
<div>
  <label>Gato</label>-
  <select name="gato">
  <% gatos.forEach(gato => { %>
    <% if (gato.id === blog_post.gato) { %>
      <option selected label="<%= gato.nome %>" value="<%= gato.id %>">
    <% } else { %>
      <option label="<%= gato.nome %>" value="<%= gato.id %>">
    <% } %>
  <% }) %>
  </select>
</div>
<div>
    <label>Capa</label>
    <input type="file" name="capa_miniatura">
</div>
<div>
    <label>Texto</label>
    <textarea name="texto"><%= blog_post.texto %></textarea>
</div>